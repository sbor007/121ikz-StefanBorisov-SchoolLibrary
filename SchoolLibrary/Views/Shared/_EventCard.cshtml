@model SchoolLibrary.Models.LibraryEvent

<div class="card mb-3">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <h6 class="card-subtitle mb-2 text-muted">
            Дата: @Model.Date.ToShortDateString()
        </h6>

        <p class="card-text">
            Локация: @Model.Location <br />
            @Model.Description
        </p>

        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Детайли</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">Редактирай</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">Изтрий</a>
    </div>
</div>
